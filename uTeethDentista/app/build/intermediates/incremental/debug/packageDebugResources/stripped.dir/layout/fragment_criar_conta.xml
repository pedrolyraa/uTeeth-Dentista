<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CriarContaFragment">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_uteethlogo"
        android:layout_width="429dp"
        android:layout_height="258dp"
        app:srcCompat="@drawable/logo_a2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-146dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tV_crie_sua_conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crie sua conta"
        android:textAlignment="textStart"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="210dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_email"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:background="@color/white"
        android:visibility="visible"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="244dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_email"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="300dp"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_senha"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Senha"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="312dp" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_senha"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="365dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_confirmar_senha"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Confirmar senha"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="380dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_confirmar_senha"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="432dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_criar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_500"
        android:text="Criar conta"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="479dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_opcoesconta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Ou entre com -"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="558dp" />


</androidx.appcompat.widget.LinearLayoutCompat>