<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CriarContaFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="Nome: "/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etNome"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/tvNome"
        android:text="Telefone: "/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etTelefone"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNome"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/tvTelefone"
        android:text="E-mail:"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEmail"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTelefone"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEnderecoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/purple_500"
        android:layout_below="@id/tvEmail"
        android:text="Endereços para atendimento "/>



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEndereco1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:layout_below="@id/tvEnderecoTitulo"
        android:text="Endereço 1: "/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEndereco1"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEndereco1"/>



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEndereco2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/etEndereco1"
        android:text="Endereço 2:"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEndereco2"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEndereco2"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEndereco3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/etEndereco2"
        android:text="Endereço 3: "/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEndereco3"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEndereco3"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCurriculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/purple_500"
        android:layout_below="@id/etEndereco3"
        android:text="Mini Curriculo: "/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etCurriculo"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCurriculo"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/black"
        android:layout_below="@id/etCurriculo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="CADASTRAR"/>
</RelativeLayout>