<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".LoginFragment">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_uteethlogo"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/uteeth_png"
        tools:ignore="MissingConstraints" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_undraw"
        android:layout_width="wrap_content"
        android:layout_height="215dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/undraw_png"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Login to your Account" />


    <EditText
        android:id="@+id/et_email_login"
        style="@style/edit_text"
        android:fontFamily="@font/poppins_medium"
        android:padding="5dp"
        android:shadowColor="@color/black"
        android:elevation="5dp"

        android:hint="E-mail">

    </EditText>

    <EditText
        android:id="@+id/et_password_login"
        style="@style/edit_text"
        android:fontFamily="@font/poppins_medium"
        android:padding="5dp"
        android:shadowColor="@color/black"
        android:elevation="5dp"

        android:hint="Password"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black"
        android:inputType="textPassword"
        >

    </EditText>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_in"
        style="@style/containerComponents"
        android:text="Sign In"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins"
        android:layout_height="65dp"
        android:elevation="100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Or Sign with-"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_light"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_google"
            style="@style/google_login"
            android:layout_width="120dp"
            android:layout_gravity="right"
            android:elevation="10dp"
            android:src="@drawable/google_logo1"></ImageView>

        <ImageView
            android:id="@+id/btn_facebook"
            style="@style/google_login"
            android:layout_width="120dp"
            android:layout_gravity="right"
            android:elevation="10dp"
            android:src="@drawable/facebook_logo3">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Don't have an account?"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="   Sign Up"
            android:textSize="20dp">

        </TextView>


    </LinearLayout>


</LinearLayout>