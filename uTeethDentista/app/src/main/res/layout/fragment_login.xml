<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_uteethlogo"
        android:layout_width="429dp"
        android:layout_height="458dp"
        app:srcCompat="@drawable/logo_a2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-146dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tV_entreConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entre com sua conta"
        android:textAlignment="textStart"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="210dp" />






    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_email"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:background="@color/white"
        android:visibility="visible"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="244dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_email"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="300dp"/>



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_senha"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Senha"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="332dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_senha"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="384dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_500"
        android:text="Entrar"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="417dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_opcoesconta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Ou entre com -"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="501dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_semconta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÃ£o tem uma conta?"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="643dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_criarconta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crie uma"
        android:textColor="@color/purple_500"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="643dp" />


</androidx.constraintlayout.widget.ConstraintLayout>